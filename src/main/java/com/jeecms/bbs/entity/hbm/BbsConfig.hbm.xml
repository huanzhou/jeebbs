<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.jeecms.bbs.entity">
	<class
		name="BbsConfig"
		table="BBS_CONFIG"
	>
		<meta attribute="sync-DAO">false</meta>
		<cache usage="read-write"/>
		<id
			name="id"
			type="java.lang.Integer"
			column="CONFIG_ID"
		>
			<generator class="foreign">
				<param name="property">site</param>
			</generator>
		</id>

		<property
			name="defAvatar"
			column="DEF_AVATAR"
			type="string"
			not-null="true"
			length="100"
		/>
		<property
			name="avatarWidth"
			column="AVATAR_WIDTH"
			type="integer"
			not-null="true"
			length="10"
		/>
		<property
			name="avatarHeight"
			column="AVATAR_HEIGHT"
			type="integer"
			not-null="true"
			length="10"
		/>
		<property
			name="topicCountPerPage"
			column="TOPIC_COUNT_PER_PAGE"
			type="integer"
			not-null="true"
			length="10"
		/>
		<property
			name="postCountPerPage"
			column="POST_COUNT_PER_PAGE"
			type="integer"
			not-null="true"
			length="10"
		/>
		<property
			name="keywords"
			column="KEYWORDS"
			type="string"
			not-null="true"
			length="255"
		/>
		<property
			name="description"
			column="DESCRIPTION"
			type="string"
			not-null="true"
			length="255"
		/>
		<property
			name="registerStatus"
			column="REGISTER_STATUS"
			type="java.lang.Short"
			not-null="true"
			length="5"
		/>
		<property
			name="registerRule"
			column="REGISTER_RULE"
			type="string"
			not-null="false"
		/>
		<property
			name="topicHotCount"
			column="TOPIC_HOT_COUNT"
			type="integer"
			not-null="true"
			length="10"
		/>
		<property
			name="postToday"
			column="CACHE_POST_TODAY"
			type="integer"
			not-null="true"
			length="10"
		/>
		<property
			name="postYesterday"
			column="CACHE_POST_YESTERDAY"
			type="integer"
			not-null="true"
			length="10"
		/>
		<property
			name="postMax"
			column="CACHE_POST_MAX"
			type="integer"
			not-null="true"
			length="10"
		/>
		<property
			name="postMaxDate"
			column="CACHE_POST_MAX_DATE"
			type="date"
			not-null="true"
		/>
		<property
			name="topicTotal"
			column="CACHE_TOPIC_TOTAL"
			type="integer"
			not-null="true"
			length="10"
		/>
		<property
			name="postTotal"
			column="CACHE_POST_TOTAL"
			type="integer"
			not-null="true"
			length="10"
		/>
		<property
			name="userTotal"
			column="CACHE_USER_TOTAL"
			type="integer"
			not-null="true"
			length="10"
		/>
		<property
			name="autoRegister"
			column="AUTO_REGISTER"
			type="java.lang.Boolean"
			not-null="false"
		/>
		<property
			name="emailValidate"
			column="EMAIL_VALIDATE"
			type="java.lang.Boolean"
			not-null="false"
		/>
		<many-to-one
			name="lastUser"
			column="last_user_id"
			class="BbsUser"
			not-null="false"
		>
		</many-to-one>
		<many-to-one
			name="registerGroup"
			column="REGISTER_GROUP_ID"
			class="BbsUserGroup"
			not-null="true"
		>
		</many-to-one>
		<many-to-one
			name="defaultGroup"
			column="DEFAULT_GROUP_ID"
			class="BbsUserGroup"
			not-null="true"
		>
		</many-to-one>
		<one-to-one
			name="site"
			class="com.jeecms.core.entity.CmsSite"
			constrained="true"
			cascade="all"
		/>
	</class>
</hibernate-mapping>