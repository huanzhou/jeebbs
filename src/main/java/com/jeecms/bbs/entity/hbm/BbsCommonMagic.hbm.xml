<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.jeecms.bbs.entity">
	<class
		name="BbsCommonMagic"
		table="bbs_common_magic"
	>
		<meta attribute="sync-DAO">false</meta>
		<id
			name="id"
			type="java.lang.Integer"
			column="magicid"
		>
			<generator class="native"/>
		</id>

		<property
			name="available"
			column="available"
			type="java.lang.Boolean"
			not-null="true"
		/>
		<property
			name="name"
			column="name"
			type="string"
			not-null="true"
			length="50"
		/>
		<property
			name="identifier"
			column="identifier"
			type="string"
			not-null="true"
			length="40"
		/>
		<property
			name="description"
			column="description"
			type="string"
			not-null="true"
			length="255"
		/>
		<property
			name="displayorder"
			column="displayorder"
			type="java.lang.Byte"
			not-null="true"
			length="3"
		/>
		<property
			name="credit"
			column="credit"
			type="java.lang.Byte"
			not-null="true"
		/>
		<property
			name="price"
			column="price"
			type="java.lang.Integer"
			not-null="true"
			length="8"
		/>
		<property
			name="num"
			column="num"
			type="java.lang.Integer"
			not-null="true"
			length="5"
		/>
		<property
			name="salevolume"
			column="salevolume"
			type="java.lang.Integer"
			not-null="true"
			length="5"
		/>
		<property
			name="supplytype"
			column="supplytype"
			type="java.lang.Integer"
			not-null="true"
		/>
		<property
			name="supplynum"
			column="supplynum"
			type="java.lang.Integer"
			not-null="true"
			length="5"
		/>
		<property
			name="useperoid"
			column="useperoid"
			type="java.lang.Integer"
			not-null="true"
		/>
		<property
			name="usenum"
			column="usenum"
			type="java.lang.Integer"
			not-null="true"
			length="5"
		/>
		<property
			name="weight"
			column="weight"
			type="java.lang.Integer"
			not-null="true"
			length="3"
		/>
		<property
			name="useevent"
			column="useevent"
			type="java.lang.Boolean"
			not-null="true"
		/>
	
		<set
			name="users"
			table="bbs_member_magic"
			cascade="all"
			lazy="true"
		>
			<key column="magicid"/>
			<many-to-many column="uid" class="BbsUser"/>
		</set>
		<set
			name="useGroups"
			table="bbs_magic_usergroup"
			cascade="all"
			lazy="true"
		>
			<key column="magicid"/>
			<many-to-many column="groupid" class="BbsUserGroup"/>
		</set>
		<set
			name="toUseGroups"
			table="bbs_magic_usergroup_to"
			cascade="all"
			lazy="true"
		>
			<key column="magicid"/>
			<many-to-many column="groupid" class="BbsUserGroup"/>
		</set>
		
	</class>	
</hibernate-mapping>