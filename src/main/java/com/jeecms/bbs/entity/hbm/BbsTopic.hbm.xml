<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.jeecms.bbs.entity">
	<class
		name="BbsTopic"
		table="BBS_TOPIC"
		discriminator-value="0">
		<meta attribute="sync-DAO">false</meta>
		<cache usage="read-write"/>
		<id
			name="id"
			type="java.lang.Integer"
			column="TOPIC_ID"
			>
			<generator class="native"/>
		</id>
		<discriminator column="CATEGORY" type="integer"/>
		<property
			name="title"
			column="TITLE"
			type="string"
			not-null="false"
			length="100"
		/>
		<property
			name="createTime"
			column="CREATE_TIME"
			type="timestamp"
			not-null="true"
			/>
		<property
			name="lastTime"
			column="LAST_TIME"
			type="timestamp"
			not-null="true"
			/>
		<property
			name="sortTime"
			column="SORT_TIME"
			type="timestamp"
			not-null="true"
			/>
		<property
			name="viewCount"
			column="VIEW_COUNT"
			type="java.lang.Long"
			not-null="true"
			length="19"
			/>
		<property
			name="replyCount"
			column="REPLY_COUNT"
			type="integer"
			not-null="true"
			length="10"
			/>
		<property
			name="topLevel"
			column="TOP_LEVEL"
			type="java.lang.Short"
			not-null="true"
			length="5"
			/>
		<property
			name="primeLevel"
			column="PRIME_LEVEL"
			type="java.lang.Short"
			not-null="true"
			length="5"
			/>
		<property
			name="styleBold"
			column="STYLE_BOLD"
			type="java.lang.Boolean"
			not-null="true"
			/>
		<property
			name="styleItalic"
			column="STYLE_ITALIC"
			type="java.lang.Boolean"
			not-null="true"
			/>
		<property
			name="styleColor"
			column="STYLE_COLOR"
			type="string"
			not-null="false"
			length="6"
			/>
		<property
			name="styleTime"
			column="STYLE_TIME"
			type="timestamp"
			not-null="false"
			/>
		<property
			name="outerUrl"
			column="OUTER_URL"
			type="string"
			not-null="false"
			length="255"
			/>
		<property
			name="status"
			column="STATUS"
			type="java.lang.Short"
			not-null="true"
			length="5"
			/>
		<property
			name="affix"
			column="IS_AFFIX"
			type="java.lang.Boolean"
			not-null="true"
			/>
		<property
			name="moderatorReply"
			column="moderator_reply"
			type="java.lang.Boolean"
			not-null="true"
			/>
		<property
			name="haveReply"
			column="HAVA_REPLY"
			type="java.lang.String"
			not-null="false"
			/>
		<property
			name="allayReply"
			column="ALLAY_REPLY"
			type="java.lang.Boolean"
			not-null="false"
			/>
		<property
			name="hasSofeed"
			column="HAS_SOFAED"
			type="java.lang.Boolean"
			not-null="false"
			/>
		<one-to-one
			name="topicText"
			class="BbsTopicText"
			cascade="all"
			/>
		<many-to-one
			name="firstPost"
			column="FIRST_POST_ID"
			class="BbsPost"
			not-null="false"
			>
		</many-to-one>
		<many-to-one
			name="site"
			column="site_id"
			class="com.jeecms.core.entity.CmsSite"
			not-null="true"
			>
		</many-to-one>
		<many-to-one
			name="forum"
			column="FORUM_ID"
			class="BbsForum"
			not-null="true"
			>
		</many-to-one>
		<many-to-one
			name="lastPost"
			column="LAST_POST_ID"
			class="BbsPost"
			not-null="false"
			>
		</many-to-one>
		<many-to-one
			name="creater"
			column="creater_id"
			class="BbsUser"
			not-null="true"
			>
		</many-to-one>
		<many-to-one
			name="lastReply"
			column="replyer_id"
			class="BbsUser"
			not-null="true"
			>
		</many-to-one>
		<many-to-one
			name="postType"
			column="TYPE_ID"
			class="BbsPostType"
			not-null="true"
			>
		</many-to-one>
		
		<subclass name="BbsVoteTopic" discriminator-value="1">
			<property name="totalCount" column="TOTAL_COUNT" not-null="false"></property>
		</subclass>
	</class>
</hibernate-mapping>