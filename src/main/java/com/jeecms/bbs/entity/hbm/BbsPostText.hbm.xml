<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.jeecms.bbs.entity">
	<class
		name="BbsPostText"
		table="BBS_POST_TEXT"
		lazy="true"
	>
		<meta attribute="sync-DAO">false</meta>
		<cache usage="read-write"/>
		<id
			name="id"
			type="java.lang.Integer"
			column="POST_ID"
		>
			<generator class="foreign">
				<param name="property">post</param>
			</generator>
		</id>
		
		<property
			name="title"
			column="POST_TITLE"
			type="string"
			not-null="false"
			length="100"
		/>
		<property
			name="content"
			column="POST_CONTENT"
			type="string"
			not-null="false"
		/>
		<one-to-one
			name="post"
			class="BbsPost"
			constrained="true"
			cascade="all"
		/>
	</class>
</hibernate-mapping>